@page "/stack"
@using DataStructureVisualizer.DataStructures

<h1>Stack Visualizer</h1>

<button class="btn btn-primary" @onclick="Push">Push</button>
<button class="btn btn-secondary" @onclick="Pop">Pop</button>

<div class="stack-container">
    @foreach (var item in _stackDesign.GetItemsInReverse())
    {
        <div class="stack-item">@item</div>
    }
</div>

@code {
    DataStructureVisualizer.DataStructures.StackDesign<int> _stackDesign = new DataStructureVisualizer.DataStructures.StackDesign<int>();
    
    void Push()
    {
        var value = new Random().Next(100);
        _stackDesign.Push(value);
    }
    
    void Pop() => _stackDesign.Pop();
}